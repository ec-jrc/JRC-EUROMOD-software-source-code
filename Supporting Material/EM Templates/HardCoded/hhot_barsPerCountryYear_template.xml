<Template>
  <TemplateInfo>
    <Name>HHoT - Breakdown per Country/Year</Name>
    <Title>EUROMOD Hypothetical Households</Title>
    <Subtitle>Breakdown per Country/Year</Subtitle>
    <Button>[@hhtype_selected]</Button>
    <Description></Description>
    <TemplateType>Multi</TemplateType>
    <RequiredVariables>
      <RequiredVariable>
        <Name>idhh</Name>
        <ReadVar>idhh</ReadVar>
      </RequiredVariable>
      <RequiredVariable>
        <Name>idperson</Name>
        <ReadVar>idperson</ReadVar>
      </RequiredVariable>
      <RequiredVariable>
        <Name>weight</Name>
        <ReadVar>dwt</ReadVar>
      </RequiredVariable>
      <RequiredVariable>
        <Name>age</Name>
        <ReadVar>dag</ReadVar>
      </RequiredVariable>
      <RequiredVariable>
        <Name>ind_hhtype</Name>
        <ReadVar>sid_h</ReadVar>
      </RequiredVariable>
      <RequiredVariable>
        <Name>origy</Name>
        <ReadVar>ils_origy</ReadVar>
      </RequiredVariable>
      <RequiredVariable>
        <Name>dispy</Name>
        <ReadVar>ils_dispy</ReadVar>
      </RequiredVariable>
      <RequiredVariable>
        <Name>ben</Name>
        <ReadVar>ils_ben</ReadVar>
      </RequiredVariable>
      <RequiredVariable>
        <Name>tax</Name>
        <ReadVar>ils_tax</ReadVar>
      </RequiredVariable>
      <RequiredVariable>
        <Name>sicee</Name>
        <ReadVar>ils_sicee</ReadVar>
      </RequiredVariable>
      <RequiredVariable>
        <Name>sicse</Name>
        <ReadVar>ils_sicse</ReadVar>
      </RequiredVariable>
      <RequiredVariable>
        <Name>benmt</Name>
        <ReadVar>ils_benmt</ReadVar>
      </RequiredVariable>
      <RequiredVariable>
        <Name>bennt</Name>
        <ReadVar>ils_bennt</ReadVar>
      </RequiredVariable>
      <RequiredVariable>
        <Name>pen</Name>
        <ReadVar>ils_pen</ReadVar>
      </RequiredVariable>
    </RequiredVariables>
    <OptionalVariables>
      <OptionalVariable>
        <Name>sicot</Name>
        <ReadVar>ils_sicot</ReadVar>
        <DefaultValue>0</DefaultValue>
      </OptionalVariable>
    </OptionalVariables>
    <UserVariables>
      <UserVariable>
        <Name>hhtype_selected</Name>
        <DefaultValue>1</DefaultValue>
        <UserInputType>Numeric</UserInputType>
        <DisplayDescription>true</DisplayDescription>
      </UserVariable>
    </UserVariables>
  </TemplateInfo>
  <Globals>
    <Actions>
      <Action>
        <CalculationType>CreateOECDScale</CalculationType>
        <OutputVar>OECDscale</OutputVar>
      </Action>
      <Action>
        <CalculationType>CreateEquivalized</CalculationType>
        <OutputVar>eqDispy</OutputVar>
        <Parameters>
          <Parameter>
            <VarName>dispy</VarName>
          </Parameter>
          <Parameter>
            <Name>EquivalenceScale</Name>
            <VarName>OECDscale</VarName>
          </Parameter>
        </Parameters>
      </Action>
      <Action>
        <CalculationType>CreateFlag</CalculationType>
        <Filter>
          <FormulaString><![CDATA[true]]></FormulaString>
        </Filter>
        <OutputVar>persCount</OutputVar>
      </Action>
      <Action>
        <CalculationType>CreateArithmetic</CalculationType>
        <CalculationLevel>Household</CalculationLevel>
        <OutputVar>hhtype</OutputVar>
        <FormulaString><![CDATA[DATA_VAR[@ind_hhtype] / DATA_VAR[@persCount]]]></FormulaString>
      </Action>
      <Action>
        <CalculationType>CalculateArithmetic</CalculationType>
        <CalculationLevel>Household</CalculationLevel>
        <OutputVar>pos</OutputVar>
        <FormulaString><![CDATA[1.0]]></FormulaString>
      </Action>
      <Action>
        <CalculationType>CalculateArithmetic</CalculationType>
        <CalculationLevel>Household</CalculationLevel>
        <OutputVar>neg</OutputVar>
        <FormulaString><![CDATA[-1.0]]></FormulaString>
      </Action>
    </Actions>
  </Globals>
  <Pages>
    <Page>
      <Name>BreakdownCountryYear</Name>
      <Title>Budget Breakdown per Country/System</Title>
      <Subtitle>[@hhtype_selected]</Subtitle>
      <Button>[@hhtype_selected]</Button>
      <Tables>
        <Table>
          <Graph>
            <Title>Budget Breakdown per Country/System</Title>
            <SeriesInRows>true</SeriesInRows>
            <ShowTable>false</ShowTable>
            <AxisX>
              <Label>Country / Year</Label>
              <Interval>1</Interval>
            </AxisX>
            <AxisY>
              <Label>Income Breakdown</Label>
            </AxisY>
            <Legend>
              <Docking>Right</Docking>
            </Legend>
            <Series>
              <Serie>
                <Name>Original income</Name>
                <Type>StackedColumn</Type>
                <Colour>Orange</Colour>
              </Serie>
              <Serie>
                <Name>Means-tested non-pension benefits</Name>
                <Type>StackedColumn</Type>
                <Colour>Green</Colour>
              </Serie>
              <Serie>
                <Name>Non-means-tested non-pension benefits</Name>
                <Type>StackedColumn</Type>
                <Colour>LightGreen</Colour>
              </Serie>
              <Serie>
                <Name>Pensions</Name>
                <Type>StackedColumn</Type>
                <Colour>DarkGreen</Colour>
              </Serie>
              <Serie>
                <Name>Direct taxes</Name>
                <Type>StackedColumn</Type>
                <Colour>Blue</Colour>
              </Serie>
              <Serie>
                <Name>Employee social insurance contributions</Name>
                <Type>StackedColumn</Type>
                <Colour>DarkBlue</Colour>
              </Serie>
              <Serie>
                <Name>Self-employed social insurance contributions</Name>
                <Type>StackedColumn</Type>
                <Colour>Cyan</Colour>
              </Serie>
              <Serie>
                <Name>Other social insurance contributions</Name>
                <Type>StackedColumn</Type>
                <Colour>LightBlue</Colour>
              </Serie>
              <Serie>
                <Name>Disposable income</Name>
                <Type>Point</Type>
                <Colour>Red</Colour>
                <MarkerStyle>Circle</MarkerStyle>
                <Size>10</Size>
              </Serie>
              <Serie>
                <Name>Equivalised disposable income</Name>
                <Type>Point</Type>
                <Colour>DarkRed</Colour>
                <MarkerStyle>Square</MarkerStyle>
                <Size>10</Size>
              </Serie>
            </Series>
          </Graph>
          <CellAction>
            <CalculationLevel>Household</CalculationLevel>
            <CalculationType>CalculateWeightedAverage</CalculationType>
            <FormulaString><![CDATA[SAVED_VAR[@PosNeg] * DATA_VAR[@Var]]]></FormulaString>
            <Parameters>
              <Parameter>
                <Name>PosNeg</Name>
                <VarName>pos</VarName>
              </Parameter>
            </Parameters>
            <Filter>
              <FormulaString><![CDATA[DATA_VAR[@hhtype] == USR_VAR[@hhtype_selected]]]></FormulaString>
              <Parameters>
                <Parameter>
                  <Name>hhtype</Name>
                  <VarName>hhtype</VarName>
                </Parameter>
                <Parameter>
                  <Name>hhtype_selected</Name>
                  <VarName>hhtype_selected</VarName>
                </Parameter>
              </Parameters>
            </Filter>
          </CellAction>
          <Rows>
            <Row>
              <Name>Original income</Name>
              <CellAction>
                <Parameters>
                  <Parameter>
                    <Name>Var</Name>
                    <VarName>origy</VarName>
                  </Parameter>
                </Parameters>
              </CellAction>
            </Row>
            <Row>
              <Name>Means-tested non-pension benefits</Name>
              <CellAction>
                <Parameters>
                  <Parameter>
                    <Name>Var</Name>
                    <VarName>benmt</VarName>
                  </Parameter>
                </Parameters>
              </CellAction>
            </Row>
            <Row>
              <Name>Non-means-tested non-pension benefits</Name>
              <CellAction>
                <Parameters>
                  <Parameter>
                    <Name>Var</Name>
                    <VarName>bennt</VarName>
                  </Parameter>
                </Parameters>
              </CellAction>
            </Row>
            <Row>
              <Name>Pensions</Name>
              <CellAction>
                <Parameters>
                  <Parameter>
                    <Name>Var</Name>
                    <VarName>pen</VarName>
                  </Parameter>
                </Parameters>
              </CellAction>
            </Row>
            <Row>
              <Name>Direct taxes</Name>
              <CellAction>
                <Parameters>
                  <Parameter>
                    <Name>Var</Name>
                    <VarName>tax</VarName>
                  </Parameter>
                  <Parameter>
                    <Name>PosNeg</Name>
                    <VarName>neg</VarName>
                  </Parameter>
                </Parameters>
              </CellAction>
            </Row>
            <Row>
              <Name>Employee social insurance contributions</Name>
              <CellAction>
                <Parameters>
                  <Parameter>
                    <Name>Var</Name>
                    <VarName>sicee</VarName>
                  </Parameter>
                  <Parameter>
                    <Name>PosNeg</Name>
                    <VarName>neg</VarName>
                  </Parameter>
                </Parameters>
              </CellAction>
            </Row>
            <Row>
              <Name>Self-employed social insurance contributions</Name>
              <CellAction>
                <Parameters>
                  <Parameter>
                    <Name>Var</Name>
                    <VarName>sicse</VarName>
                  </Parameter>
                  <Parameter>
                    <Name>PosNeg</Name>
                    <VarName>neg</VarName>
                  </Parameter>
                </Parameters>
              </CellAction>
            </Row>
            <Row>
              <Name>Other social insurance contributions</Name>
              <CellAction>
                <Parameters>
                  <Parameter>
                    <Name>Var</Name>
                    <VarName>sicot</VarName>
                  </Parameter>
                  <Parameter>
                    <Name>PosNeg</Name>
                    <VarName>neg</VarName>
                  </Parameter>
                </Parameters>
              </CellAction>
            </Row>
            <Row>
              <Name>Disposable income</Name>
              <CellAction>
                <Parameters>
                  <Parameter>
                    <Name>Var</Name>
                    <VarName>dispy</VarName>
                  </Parameter>
                </Parameters>
              </CellAction>
            </Row>
            <Row>
              <Name>Equivalised disposable income</Name>
              <CellAction>
                <Parameters>
                  <Parameter>
                    <Name>Var</Name>
                    <VarName>eqDispy</VarName>
                  </Parameter>
                </Parameters>
              </CellAction>
            </Row>
          </Rows>
          <Columns>
            <Column>
              <Name>[baseSys]</Name>
              <CellAction>
              </CellAction>
            </Column>
          </Columns>
        </Table>
      </Tables>
    </Page>
  </Pages>
</Template>